{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Créez votre compte</h3>
                </div>
                <div class="card-body p-4">
                    {{ form_start(registrationForm, { attr: { novalidate: 'novalidate' } }) }}
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.email, 'Adresse e-mail', { label_attr: { class: 'form-label' } }) }}
                        {{ form_widget(registrationForm.email, { attr: { class: 'form-control', placeholder: 'exemple@domaine.com' } }) }}
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', { label_attr: { class: 'form-label' } }) }}
                        {{ form_widget(registrationForm.plainPassword.first, { attr: { class: 'form-control', placeholder: 'Votre mot de passe' } }) }}
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword.second, 'Confirmez le mot de passe', { label_attr: { class: 'form-label' } }) }}
                        {{ form_widget(registrationForm.plainPassword.second, { attr: { class: 'form-control', placeholder: 'Confirmez votre mot de passe' } }) }}
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            S'inscrire
                        </button>
                    </div>
                    
                    {{ form_end(registrationForm) }}
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <p class="mb-0">Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-primary">Connectez-vous</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}