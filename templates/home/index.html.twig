{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Car Rental Madagascar - Location de voitures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://www.istockphoto.com/photo/panorama-of-antananarivo-capital-of-madagascar-gm840859134-137046639?searchscope=image%2Cfilm');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            margin-bottom: 30px;
        }
        
        .feature-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            margin-bottom: 20px;
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
        }
        
        .car-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        
        .booking-form {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Section Héro -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Car Rental Madagascar</h1>
            <p class="lead">Découvrez Madagascar en toute liberté avec notre service de location de voitures</p>
            <div class="mt-4">
                <a href="" class="btn btn-primary btn-lg me-2">Réserver maintenant</a>
                <a href="" class="btn btn-outline-light btn-lg">Acheter une voiture</a>
            </div>
        </div>
    </section>

    <!-- Formulaire de Recherche Rapide -->
    <section class="container mb-5">
        <div class="booking-form">
            <h2 class="text-center mb-4">Recherche rapide</h2>
            <form action="" method="GET">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="pickup_location" class="form-label">Lieu de prise en charge</label>
                        <select class="form-select" id="pickup_location" name="pickup_location" required>
                            <option value="">Choisir un lieu</option>
                            <option value="antananarivo">Antananarivo</option>
                            <option value="nosy_be">Nosy Be</option>
                            <option value="tamatave">Tamatave</option>
                            <option value="diego_suarez">Diego Suarez</option>
                            <option value="fort_dauphin">Fort Dauphin</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="pickup_date" class="form-label">Date de prise en charge</label>
                        <input type="date" class="form-control" id="pickup_date" name="pickup_date" required>
                    </div>
                    <div class="col-md-3">
                        <label for="return_date" class="form-label">Date de retour</label>
                        <input type="date" class="form-control" id="return_date" name="return_date" required>
                    </div>
                    <div class="col-md-3">
                        <label for="driver" class="form-label">Avec chauffeur?</label>
                        <select class="form-select" id="driver" name="driver">
                            <option value="no">Sans chauffeur</option>
                            <option value="yes">Avec chauffeur</option>
                        </select>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- Nos Services -->
    <section class="container mb-5">
        <h2 class="text-center mb-4">Nos Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-car fa-4x mb-3 text-primary"></i>
                        <h3 class="card-title">Location de voitures</h3>
                        <p class="card-text">Large gamme de véhicules pour tous vos besoins, de la citadine économique au 4x4 tout-terrain.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-user-tie fa-4x mb-3 text-primary"></i>
                        <h3 class="card-title">Service avec chauffeur</h3>
                        <p class="card-text">Chauffeurs expérimentés connaissant parfaitement les routes et les sites touristiques de Madagascar.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 text-center p-4">
                    <div class="card-body">
                        <i class="fas fa-tags fa-4x mb-3 text-primary"></i>
                        <h3 class="card-title">Vente de véhicules</h3>
                        <p class="card-text">Achetez des voitures adaptées aux conditions locales, avec garantie et service après-vente.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Véhicules Populaires -->
    <section class="container mb-5">
        <h2 class="text-center mb-4">Véhicules Populaires</h2>
        <div class="row">
            {% for i in 1..3 %}
                <div class="col-md-4">
                    <div class="car-card card h-100">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/0/09/00_hyundai_starex_van_1_(cropped).jpg" class="card-img-top" alt="Voiture {{ i }}">
                        <div class="card-body">
                            <h5 class="card-title">Modèle de voiture {{ i }}</h5>
                            <p class="card-text">
                                <i class="fas fa-users me-2"></i> 5 places
                                <i class="fas fa-suitcase ms-3 me-2"></i> 3 bagages
                                <i class="fas fa-gas-pump ms-3 me-2"></i> Diesel
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0">50€ / jour</span>
                                <a href="" class="btn btn-primary">Détails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center mt-4">
            <a href="" class="btn btn-outline-primary">Voir tous les véhicules</a>
        </div>
    </section>

    <!-- Pourquoi nous choisir -->
    <section class="container mb-5">
        <h2 class="text-center mb-4">Pourquoi nous choisir</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-primary fa-2x me-3"></i>
                    </div>
                    <div>
                        <h4>Tarifs transparents</h4>
                        <p>Pas de frais cachés. Nos tarifs incluent l'assurance et l'assistance routière.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-map-marked-alt text-primary fa-2x me-3"></i>
                    </div>
                    <div>
                        <h4>Connaissance locale</h4>
                        <p>Notre équipe vous conseille sur les meilleurs itinéraires et destinations.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-tools text-primary fa-2x me-3"></i>
                    </div>
                    <div>
                        <h4>Véhicules bien entretenus</h4>
                        <p>Toutes nos voitures sont régulièrement entretenues pour assurer votre sécurité.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-headset text-primary fa-2x me-3"></i>
                    </div>
                    <div>
                        <h4>Support 24/7</h4>
                        <p>Notre service client est disponible à tout moment pour vous assister.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Témoignages -->
    <section class="container mb-5">
        <h2 class="text-center mb-4">Ce que disent nos clients</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="mb-3 text-warning">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <p class="card-text">"Service impeccable, voiture en parfait état et personnel très serviable. Je recommande vivement !"</p>
                        <p class="card-text"><small class="text-muted">- Jean Dupont</small></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="mb-3 text-warning">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <p class="card-text">"Excellent rapport qualité-prix. La voiture était parfaite pour notre voyage à travers l'île."</p>
                        <p class="card-text"><small class="text-muted">- Marie Leroux</small></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="mb-3 text-warning">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <p class="card-text">"Notre chauffeur était incroyable, il connaissait tous les meilleurs endroits à visiter et était toujours ponctuel."</p>
                        <p class="card-text"><small class="text-muted">- Pierre Martin</small></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-body text-center p-4">
                        <h3>Restez informé</h3>
                        <p>Abonnez-vous à notre newsletter pour recevoir nos offres spéciales et actualités</p>
                        <form action="" method="POST" class="row g-3 justify-content-center">
                            <div class="col-md-8">
                                <input type="email" class="form-control" placeholder="Votre adresse email" required>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">S'abonner</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}